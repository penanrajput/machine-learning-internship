{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Python File by PENAN",
            "command": "",
            "args": [
                "start",
                "cmd",
                "/c",
                "py ${fileBasenameNoExtension}.py & echo. & echo. & pause"
            ],
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "C/C++: g++.exe build active file by PENAN",
            "command": "g++.exe",
            "args": [
                "-g",
                "${relativeFile}",
                "-o",
                "${fileBasenameNoExtension}.exe",
                "&&",
                "start",
                "cmd",
                "/c",
                "${fileBasenameNoExtension} & echo. & echo. & pause"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Run JAVA File by PENAN",
            "command": "",
            "args": [
                "javac",
                "${fileBasenameNoExtension}.java",
                "&",
                "start",
                "cmd",
                "/c",
                "java ${fileBasenameNoExtension} & echo. & echo. & pause"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": []
        }
    ]
}